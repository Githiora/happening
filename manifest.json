{
  "manifest_version": 2,

  "name": "Happening",
  "description": "Shows popular events happening near you.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title":"Click here man!"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "geolocation"
  ],
  "content_scripts": [{
    "js": ["popup.js"],
    "matches":["<all_urls>"]
  }]
}